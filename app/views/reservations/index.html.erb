<div class="container mt-5">
  <div class="row">
    <div class="col-auto mx-5">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ルーム画像</th>
            <th scope="col">ルーム名</th>
            <th scope="col">ルーム紹介</th>
            <th scope="col">合計金額</th>
            <th scope="col">開始日</th>
            <th scope="col">終了日</th>
            <th scope="col">予約確定日時</th>
          </tr>
        </thead>
        <tbody>
          <% @reservations.each do |reser| %>
            
            <tr>
              <td><%= image_tag reser.room.roomimg.url %></td>
              <td><%= reser.room.roomname%></td>
              <td><%= reser.room.introduction%></td>
              <td><%= reser.total_price%></td>          
              <td><%= reser.start_day %></td>
              <td><%= reser.end_day %></td>
              <td><%= reser.created_at.to_s(:datetime_jp) %></td>
              
            
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

  