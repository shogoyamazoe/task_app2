<div class="container mt-5">
<div class="row">
<div class="col-6 mx-auto">
<h3>プロフィール</h3>

<%= form_with model: @user do |f| %>
    <div class="form-group">
      <%= f.label :name ,"名前" %><span class="badge badge-danger">必須</span><br>
      <%= f.text_field :username , class: "form-control"%><br>
    </div>
    <div class="form-group">
      <%= f.label :email ,"メールアドレス" %><span class="badge badge-danger">必須</span><br>
      <%= f.text_field :email , class: "form-control" %><br>
    </div>
    <div class="form-group">  
      <%= f.label :shokai ,"自己紹介" %><span class="badge badge-danger">必須</span><br>
      <%= f.text_area :shokai , class: "form-control"%><br>
    </div>  
    <div class="form-group">
      <%= f.label :roomimg ,"プロフィール写真" %><span class="badge badge-danger">必須</span>
      <%= f.file_field:image %>  
  </div>  
      <%= f.submit "更新" ,class: "btn btn-primary"%>
      <% end %>
      
  </div>
  </div>
  </div>

