<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

      <%= link_to root_path   do%>
        <h1>pote_shere</h1> 
      <% end %>
   
      <%= search_form_for @search, url: search_rooms_path do |f| %>
        <%= f.search_field :address_cont,class:"form-control", placeholder:'エリア' %>
      <% end %>

      <%= search_form_for @search, url: search_rooms_path do |f| %>
        <%=f.search_field:roomname_or_address_or_price_cont,class:"form-control", placeholder: "キーワード"%>
      <% end %>
        <% if user_signed_in? %>
          <div class="collapse navbar-collapse" id="Navber">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <%= link_to "ルーム登録", new_room_path , class: "nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to "登録ルーム一覧",  postuser_rooms_path , class: "nav-link"%>
              </li> 
              <li class="nav-item">
                <%= link_to "予約ルーム一覧", reservations_path , class: "nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to 'プロフィール変更', edit_user_registration_path , class: "nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete , class: "nav-link"%>
              </li>
              <li>
              <%= current_user.username %>      
                <img src=<%= current_user.image %> class = "icon_image" >
              </li>         
          </div>
        <% else %>
          <div class="collapse navbar-collapse" id="Navber">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <%= link_to '新規登録', new_user_registration_path , class: "nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to 'ログイン', new_user_session_path , class: "nav-link"%>
              </li>
            </ul>
          </div>
        <% end %>
    </nav>

  </header>
 <% if flash[:notice] %>
  <div class="alert alert-primary"  role="alert"><strong><%= notice %></strong></div>
 <% end %>

 <% if flash[:alert] %>
  <div class="alert alert-danger"  role="alert"><strong><%= alert %></strong></div>
 <% end %>
  <%= yield %>
  </body>
  
  <footer>
    <h5>poteoan</h5>
  </footer>

</html>
